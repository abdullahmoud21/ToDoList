@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  // Using the admin panel layout
}
@using ToDoList.Models

@model ToDoTask

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Create New Task</h1>

    <form action="/Admin/Task/Create" method="post" enctype="multipart/form-data" class="bg-white shadow-lg rounded-lg p-6">

        <!-- Hidden Field for Id (Ensures Model Binding) -->
        <input type="hidden" id="Id" name="Id" />

        <!-- Task Title -->
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Title</label>
            <input id="Title" name="Title" type="text" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required />
        </div>

        <!-- Task Description -->
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Description</label>
            <textarea id="Description" name="Description" rows="4" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required></textarea>
        </div>

        <!-- Deadline -->
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Deadline</label>
            <input id="Deadline" name="Deadline" type="datetime-local" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required />
        </div>

        <!-- Completion Status -->
        <div class="mb-4 flex items-center">
            <input id="IsCompleted" name="IsCompleted" type="checkbox" class="mr-2">
            <label class="text-gray-700 font-semibold">Mark as Completed</label>
        </div>

        <!-- PDF Attachment -->
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Attach PDF (Optional)</label>
            <input type="file" id="file" name="file" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" accept="application/pdf">
        </div>

        <!-- Submit Button -->
        <div class="flex justify-end">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold">Create Task</button>
        </div>
    </form>
</div>
