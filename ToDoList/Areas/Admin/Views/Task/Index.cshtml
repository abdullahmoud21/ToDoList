@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  // Pointing to the shared layout
}

@{
    var colors = new string[] { "border-red-500", "border-blue-500", "border-green-500", "border-yellow-500", "border-purple-500" };
    int i = 0;
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Tasks</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            var borderColor = colors[i % colors.Length]; // Rotate border colors
            <div class="bg-white shadow-lg rounded-lg p-4 border-l-4 @borderColor hover:shadow-xl transition duration-300">
                <h2 class="text-xl font-semibold">@item.Title</h2>
            </div>
            i++; // Increment for the next task
        }
    </div>
</div>
