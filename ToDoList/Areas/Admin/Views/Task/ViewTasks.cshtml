@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  // Pointing to the shared layout
}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Manage Tasks</h1>

    <!-- Add New Task Button -->
    <a href="/Admin/Task/Create" class="mb-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300">
        + Add Task
    </a>

    <!-- Tasks Table -->
    <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
        <table class="min-w-full border border-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="py-2 px-4 border-b text-left">Title</th>
                    <th class="py-2 px-4 border-b text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Task Row (Replace dynamically later) -->
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="py-2 px-4 border-b">@item.Title</td>
                        <td class="py-2 px-4 border-b text-center">
                            <div class="flex items-center justify-center space-x-2">
                                <a href="/Admin/Task/Edit?TaskId=@item.Id" class="px-3 py-1 bg-green-500 text-white rounded hover:bg-green-600 transition duration-300">
                                    Edit
                                </a>
                                <form action="Delete?id=@item.Id"  method="post" onsubmit="return confirm('Are you sure you want to delete this task?');">
                                    <button type="submit" class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition duration-300">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

