@{
    Layout = "~/Views/Shared/_Layout.cshtml";  // Pointing to the shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .welcome-section {
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        }

        .btn-custom {
        background-color: #007bff;
        color: white;
        border-radius: 50px;
        font-size: 18px;
        padding: 15px 30px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn-custom:hover {
        background-color: #0056b3;
        transform: scale(1.05);
        }

        .btn-custom:active {
        background-color: #003f7f;
        transform: scale(1);
        }

        .task-card {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .task-card h4 {
        font-size: 20px;
        font-weight: bold;
        }
    </style>
</head>
<body class="bg-light d-flex flex-column align-items-center" style="height: 100vh;">

    <!-- Welcome Section -->
    <div class="welcome-section">
        <h2 class="text-center">Welcome to Your Dashboard, User!</h2>
        <p class="text-center">Manage your tasks and stay productive with ease.</p>
    </div>

    <!-- Notification Section -->
    <div class="container mb-4">
        <div class="alert alert-info" role="alert">
            <strong>Notice:</strong> You have pending tasks that need your attention.
        </div>
    </div>

    <!-- Task Section -->
    <div class="container mb-4">
        <div class="task-card">
            <h4>Your Current Tasks:</h4>
            <ul>
                @{
                    int x = 1;
                }
                @foreach(var item in Model){
                    <li>Task @x: @item.Title</li>
                    x++;
                }
            </ul>
        </div>
    </div>

    <!-- View Tasks Button -->
    <div class="container">
        <a href="user/task/index" class="btn-custom btn-lg">
            View Full Tasks
        </a>
    </div>

    <!-- Footer Section (optional) -->
    <div class="footer mt-auto text-center">
        <p>&copy; 2025 Your Company. All rights reserved.</p>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
